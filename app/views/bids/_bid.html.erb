<tr>
	<td><%= bid.candidate.name %></td>
	<td>$<%= bid.bid %></td>
	<td><%= time_ago_in_words(bid.created_at) %> ago.</td>
	<% if @user.admin %>
			<td><%= User.find(bid.user_id).name %></td>
			<td><%= link_to "delete", bid, method: :delete,
                                  data: { confirm: "You sure?" } %></td>
	<% end %>
</tr>
