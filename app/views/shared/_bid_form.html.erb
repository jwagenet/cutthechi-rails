<%= form_for(@bid) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.label :bid, "Bid: $" %>
	<%= f.text_area :bid, placeholder: "$" %>
	<%= f.text_area :candidate_id, value: candidate.id, display: hidden %>
	<%= f.hidden_field :minimum_bid, value: minimum_bid(candidate) %>
	<%= f.submit "Place Bid" %>
<% end %>